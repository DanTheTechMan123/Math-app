<LOS>:
    name: "sin"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Label:
                text: "Known side measure(a)"
            Label:
                text: "Known angle measure(A)"
            TextInput:
                input_filter: 'float'
                id: a
            TextInput:
                input_filter: 'float'
                id: A
        GridLayout:
            cols: 2
            Label:
                text: "Solve for an angle"
            Label:
                text: "Solve for a side"
            Label:
                text: "Other known side measure(b)"
            Label:
                text: "Other known angle measure(B)"
            TextInput:
                input_filter: 'float'
                id: b
            TextInput:
                input_filter: 'float'
                id: B
            Label:
                text: "Final angle = "
                id: angle
            Label:
                text: "Final side = "
                id: side
            Button:
                text: "Submit" 
                on_release: root.sub1()
            Button:
                text: "Submit" 
                on_release: root.sub2()
        GridLayout:
            cols: 2
            Button:
                text: "Clear"
                on_release: root.clear() 
            Button:
                text: "Back"
                on_release:
                    app.root.current = "lsc"
                    root.manager.transition.direction = "right"

    
