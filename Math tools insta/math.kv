WM:
    Default:
    Quadratic:
    LawOfSINCOS:
    MatrixMult:
    Standard:
    Slope:
    RADEG:
    LOS:
    LOC:
    TWO:
    THREE:
<Default>:
    name: "main"
    GridLayout:
        cols: 1
        Label:
            text: "Math Tools!"
            font_size: 50
            background_color: 88/255.0, 24/255.0, 69/255.0, 1
        GridLayout:
            cols: 2
            Button:
                text: "Quadratic formula"
                on_release:
                    app.root.current = "quad"
                    root.manager.transition.direction = "left"
            Button:
                text: "Law of Sine and law of Cosine calculator"
                on_release:
                    app.root.current = "lsc"
                    root.manager.transition.direction = "left"
            Button:
                text: "Matrix Determinant"
                on_release:
                    app.root.current = "matrix"
                    root.manager.transition.direction = "left"
            Button:
                text: "Standard Deviation"
                on_release:
                    app.root.current = "SD"
                    root.manager.transition.direction = "left"
            Button:
                text: "Slope Formula"
                on_release:
                    app.root.current = "SL"
                    root.manager.transition.direction = "left"
            Button:
                text: "Degrees and Radian Conversions"
                on_release:
                    app.root.current = "DR"
                    root.manager.transition.direction = "left"
<Quadratic>:
    name: "quad"
    GridLayout:
        cols: 1
        Label:
            text: "a"
        TextInput:
            input_filter: 'float'
            id: a
        Label:
            text: "b"
        TextInput:
            input_filter: 'float'
            id: b
        Label:
            text: "c"
        TextInput:
            input_filter: 'float'
            id: c
        Label:
            id: x1
            text: "x1="
        Label:
            id: x2
            text: "x2="
        GridLayout:
            cols: 3
            Button:
                text: "Submit"
                on_release: root.btn()
            Button:
                text: "Clear"
                on_release: root.clear()
            Button:
                text: "Back to menu"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
